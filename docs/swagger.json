{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/local/": {
            "get": {
                "description": "Возвращает index.html",
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "LocalManga"
                ],
                "summary": "Отдать главную страницу локального приложения",
                "responses": {
                    "200": {
                        "description": "index.html",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/local/upload": {
            "post": {
                "description": "Uploads an image file to the server",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "LocalManga"
                ],
                "summary": "Upload an image",
                "parameters": [
                    {
                        "type": "file",
                        "description": "Image file",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Whether to create a sub dir",
                        "name": "make_dir",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File uploaded",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "No file received",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}